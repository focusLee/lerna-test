{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.0.4",
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "exact": true,
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "includeMergedTags": true
    },
    "publish": {
      "registry": "https://registry.npmjs.org/"
    }
  }
}